{
  "$schema": "https://schema.tauri.app/config/2.0.json",
  "productName": "Layercake",
  "version": "0.1.7",
  "identifier": "com.layercake.app",
  "build": {
    "beforeDevCommand": "cd ../frontend && npm run dev -- --host 127.0.0.1 --port 5173",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Layercake - Graph Editor",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 Layercake Contributors",
    "category": "DeveloperTool",
    "shortDescription": "Interactive graph transformation and visualization tool",
    "longDescription": "Layercake is a collaborative graph editing platform that allows users to create, edit, and transform graphs visually with real-time collaboration features.",
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": ""
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {}
}
