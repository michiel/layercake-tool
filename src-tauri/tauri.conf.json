{
  "$schema": "https://schema.tauri.app/config/2.0.json",
  "productName": "Layercake",
  "version": "0.1.7",
  "identifier": "com.layercake.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Layercake - Graph Editor",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Interactive graph transformation and visualization tool",
    "longDescription": "Layercake is a collaborative graph editing platform that allows users to create, edit, and transform graphs visually with real-time collaboration features."
  },
  "plugins": {}
}