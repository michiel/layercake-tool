{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "dev-remote-access",
  "description": "Allow the Vite dev server to access Tauri core APIs during desktop development.",
  "windows": ["main"],
  "remote": {
    "urls": [
      "http://127.0.0.1:5173/*",
      "http://localhost:5173/*"
    ]
  },
  "permissions": [
    "core:default",
    "core:app:default",
    "core:event:default",
    "core:window:default",
    "core:webview:default",
    "core:webview:allow-create-webview-window",
    "dialog:default",
    "shell:default"
  ]
}
