digraph G {
    // layout="dot"; // circo, dot, fdp, neato, osage, sfdp, twopi
    {{#if graph_name}}
    label="{{graph_name}}";
    {{/if}}
    labelloc="t";
    rankdir="{{config.orientation}}";
    splines=true;
    overlap=false;
    // K=0.6;
    // sep="+50,50"; // increase this to make the graph more spread out
    nodesep="0.3";
    ranksep="1.3";
    fontname="Lato";
    node [ shape="plaintext" style="filled, rounded" fontsize=12]
    {{#if (eq config.orientation "LR")}}
    node [ width=1.5, fixedsize=false ]
    {{/if}}
    edge [ fontname="Lato" color="#2B303A" fontsize=8]

{{#if config.apply_layers}}
  {{#each layers as |layer|}}
  node [style="filled, dashed" fillcolor="#{{layer.background_color}}" fontcolor="#{{layer.text_color}}" penwidth=1 color="#{{layer.border_color}}"]; {
    {{#each ../hierarchy_nodes as |node|}}
        {{#if (eq node.layer layer.id)}}
            {{node.id}}[label="{{node.label}}"];
        {{/if}}
    {{/each}}
    }
  {{/each}}
{{else}}
  {{#each hierarchy_nodes as |node|}}
    {{node.id}}[label="{{node.label}}"];
  {{/each}}
{{/if}}

  {{#each hierarchy_edges as |edge|}}
    {{#if (exists edge.label)}}
      {{edge.source}} -> {{edge.target}} [label="{{edge.label}}"{{#if ../config.apply_layers}}{{#each ../layers as |layer|}}{{#if (eq edge.layer layer.id)}} fontcolor="#{{layer.background_color}}"{{/if}}{{/each}}{{/if}}{{#if ../config.use_edge_weight}} penwidth={{edge_penwidth edge.relative_weight}}{{/if}}];
    {{else}}
      {{edge.source}} -> {{edge.target}}{{#if ../config.use_edge_weight}} [penwidth={{edge_penwidth edge.relative_weight}}]{{/if}};
    {{/if}}
  {{/each}}
}
