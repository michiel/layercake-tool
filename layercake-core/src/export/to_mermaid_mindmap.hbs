---
{{#if graph_name}}
 title: {{graph_name}}
{{/if}}
{{#with config.target_options.mermaid as |mm|}}
config:
  look: {{mm.look}}
  displayMode: {{mm.display}}
{{/with}}
---
mindmap
  root(("{{graph_name}}"))
{{#*inline "render_node"}}
{{mindmap_indent depth}}{{sanitize_id id}}["{{label}}"]
{{#each children}}
{{> render_node}}
{{/each}}
{{/inline}}
{{#if (is_empty hierarchy_tree_edges)}}
  {{#each hierarchy_tree}}
  {{> render_node}}
  {{/each}}
{{else}}
  {{#each hierarchy_tree_edges}}
  {{> render_node}}
  {{/each}}
{{/if}}
